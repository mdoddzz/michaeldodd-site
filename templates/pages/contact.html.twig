{% extends "./base.html.twig" %}

{% block body %}
    <div class="container mx-auto py-8">
        <h2 class="text-2xl font-bold mb-4">Contact Form</h2>
        <form action="{{ submit_form }}" method="post">
            <div class="mb-4">
                <label for="name" class="block text-gray-700">Name</label>
                <input type="text" id="name" name="name" placeholder="Your name.." required class="mt-1 p-2 border border-gray-300 rounded w-full">
            </div>

            <div class="mb-4">
                <label for="email" class="block text-gray-700">Email</label>
                <input type="text" id="email" name="email" placeholder="Your email.." required class="mt-1 p-2 border border-gray-300 rounded w-full">
            </div>

            <div class="mb-4">
                <label for="message" class="block text-gray-700">Message</label>
                <textarea id="message" name="message" placeholder="Write something.." required class="mt-1 p-2 border border-gray-300 rounded w-full h-32"></textarea>
            </div>

            <input type="submit" value="Submit" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded float-right">
        </form>
    </div>
{% endblock %}